generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Patients {
  id       Int        @id @default(autoincrement())
  phone    String     @unique
  name     String     
  email    String     @unique
  gender   GendersType     
  Schedule Schedule[]

  @@map("Patients")
}

model Doctors {
  id       Int        @id @default(autoincrement())
  name     String
  spec     String
  price    Int
  Schedule Schedule[]

  @@map("Doctors")
}

model Schedule {
  id        Int       @id @default(autoincrement())
  date      DateTime  @db.Date  
  
  time_from_id  Int  
  time_from TimeSample @relation(fields: [time_from_id], references: [id])


  time_to  DateTime   @default(now()) 
  is_free   Boolean @default(true)

  patients_id Int
  patient     Patients @relation(fields: [patients_id], references: [id])

  doctors_id Int
  doctors    Doctors @relation(fields: [doctors_id], references: [id])
  type       Int

  @@map("Schedule")
}


model TimeSample {
  id Int @id @default(autoincrement())
  time DateTime @unique @db.Time


  Schedule Schedule[]
  @@map("TimeSample")
}


enum GendersType{
  male
  female
}
